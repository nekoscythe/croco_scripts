#!/bin/bash

# Function to get the project root directory
get_project_root() {
    local dir=$(pwd)
    while [[ ! -f "$dir/settings.yaml" && "$dir" != "/" ]]; do
        dir=$(dirname "$dir")
    done
    echo "$dir"
}

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
CONFIG_DIR="$SCRIPT_DIR/Configs"
CONFIG_MAP="$CONFIG_DIR/config_map.yaml"

FILE_TYPES=$(yq e '.FileTypes | keys | .[]' "$CONFIG_MAP")
echo "File types: $FILE_TYPES"

# AI
# write a function to prompt the user for the 4 options:
# 1. Resolution
# 2. Bio or Physics
# 3. Init Config
# 4. Diffusion Settings
# AI!